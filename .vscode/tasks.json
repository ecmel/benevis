{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "git clean -Xdf"
        },
        {
            "label": "Init",
            "type": "shell",
            "windows": {
                "command": "if (Test-Path -Path '.venv') { echo 'PASS' } else { python -m venv .venv }"
            },
            "command": "[ -d '.venv' ] && echo 'PASS' || python3 -m venv .venv"
        },
        {
            "dependsOn": [
                "Init"
            ],
            "label": "Install",
            "type": "shell",
            "windows": {
                "command": ".venv\\Scripts\\pip install -r requirements.txt"
            },
            "command": ".venv/bin/pip install -r requirements.txt"
        },
        {
            "label": "Debug",
            "type": "shell",
            "options": {
                "cwd": "benevis"
            },
            "windows": {
                "command": "..\\.venv\\Scripts\\briefcase dev"
            },
            "command": "../.venv/bin/briefcase dev"
        },
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "cwd": "benevis"
            },
            "windows": {
                "command": "..\\.venv\\Scripts\\briefcase build --update"
            },
            "command": "../.venv/bin/briefcase build --update"
        },
        {
            "label": "Resources",
            "type": "shell",
            "options": {
                "cwd": ".venv"
            },
            "windows": {
                "command": "Invoke-WebRequest -Uri 'https://alphacephei.com/vosk/models/vosk-model-small-en-us-0.15.zip' -OutFile 'vosk-model-small-en-us-0.15.zip'"
            }
        },
        {
            "dependsOn": [
                "Resources"
            ],
            "label": "Expand",
            "type": "shell",
            "windows": {
                "command": "Expand-Archive -LiteralPath '.venv\\vosk-model-small-en-us-0.15.zip' -DestinationPath 'benevis\\src\\benevis\\resources\\models\\'"
            }
        },
        {
            "dependsOn": [
                "Build",
                "Expand"
            ],
            "label": "Platform",
            "type": "shell",
            "osx": {
                "command": "[ -d 'benevis/macOS' ] && plutil -replace NSMicrophoneUsageDescription -string 'Allow?' benevis/macOS/app/Benevis/Benevis.app/Contents/Info.plist || echo 'PASS'"
            }
        },
        {
            "dependsOn": [
                "Platform"
            ],
            "label": "Run",
            "type": "shell",
            "options": {
                "cwd": "benevis"
            },
            "windows": {
                "command": "..\\.venv\\Scripts\\briefcase run"
            },
            "command": "../.venv/bin/briefcase run"
        },
        {
            "dependsOn": [
                "Platform"
            ],
            "label": "Package",
            "type": "shell",
            "options": {
                "cwd": "benevis"
            },
            "windows": {
                "command": "..\\.venv\\Scripts\\briefcase package"
            },
            "command": "../.venv/bin/briefcase package --no-sign"
        }
    ]
}