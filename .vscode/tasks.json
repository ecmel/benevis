{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "git clean -Xdf"
        },
        {
            "label": "Init",
            "type": "shell",
            "command": "[ -d '.venv' ] && echo 'PASS' || (python3 -m venv .venv && .venv/bin/pip install --upgrade pip)"
        },
        {
            "dependsOn": [
                "Init"
            ],
            "label": "Install",
            "type": "shell",
            "command": ".venv/bin/pip install -r requirements.txt && .venv/bin/zipget requirements.json"
        },
        {
            "label": "Debug",
            "type": "shell",
            "options": {
                "cwd": "benevis"
            },
            "command": "../.venv/bin/briefcase dev"
        },
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "cwd": "benevis"
            },
            "command": "../.venv/bin/briefcase build --update"
        },
        {
            "dependsOn": [
                "Build"
            ],
            "label": "Platform",
            "type": "shell",
            "command": "[ -d 'benevis/macOS' ] && plutil -replace NSMicrophoneUsageDescription -string 'Allow?' benevis/macOS/app/Benevis/Benevis.app/Contents/Info.plist || echo 'PASS'"
        },
        {
            "dependsOn": [
                "Platform"
            ],
            "label": "Run",
            "type": "shell",
            "options": {
                "cwd": "benevis"
            },
            "command": "../.venv/bin/briefcase run"
        },
        {
            "dependsOn": [
                "Platform"
            ],
            "label": "Package",
            "type": "shell",
            "options": {
                "cwd": "benevis"
            },
            "command": "../.venv/bin/briefcase package --no-sign"
        }
    ]
}