{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "git clean -Xdf"
        },
        {
            "label": "Init",
            "type": "shell",
            "windows": {
                "command": "if (Test-Path -Path '.venv') { echo 'PASS' } else { python -m venv .venv }"
            },
            "command": "[ -d '.venv' ] && echo 'PASS' || python3 -m venv .venv"
        },
        {
            "dependsOn": [
                "Init"
            ],
            "label": "Download",
            "type": "shell",
            "windows": {
                "command": "if (Test-Path -Path '.venv\\vosk-model-small-en-us-0.15.zip') { echo 'PASS' } else { Invoke-WebRequest -Uri 'https://alphacephei.com/vosk/models/vosk-model-small-en-us-0.15.zip' -OutFile '.venv\\vosk-model-small-en-us-0.15.zip' }"
            },
            "command": "[ -d 'vosk-model-small-en-us-0.15.zip' ] && echo 'PASS' || wget 'https://alphacephei.com/vosk/models/vosk-model-small-en-us-0.15.zip' -O .venv/vosk-model-small-en-us-0.15.zip"
        },
        {
            "dependsOn": [
                "Download"
            ],
            "label": "Expand",
            "type": "shell",
            "windows": {
                "command": "if (Test-Path -Path 'benevis\\src\\benevis\\resources\\models\\vosk-model-small-en-us-0.15') { echo 'PASS' } else { Expand-Archive -LiteralPath '.venv\\vosk-model-small-en-us-0.15.zip' -DestinationPath 'benevis\\src\\benevis\\resources\\models\\' }"
            },
            "command": "[ -d 'benevis/src/benevis/resources/models/vosk-model-small-en-us-0.15.zip' ] && echo 'PASS' || unzip -d benevis/src/benevis/resources/models/ .venv/vosk-model-small-en-us-0.15.zip"
        },
        {
            "dependsOn": [
                "Expand"
            ],
            "label": "Install",
            "type": "shell",
            "windows": {
                "command": ".venv\\Scripts\\pip install -r requirements.txt"
            },
            "command": ".venv/bin/pip install -r requirements.txt"
        },
        {
            "label": "Debug",
            "type": "shell",
            "windows": {
                "command": "cd benevis && ..\\.venv\\Scripts\\briefcase dev"
            },
            "command": "cd benevis && ../.venv/bin/briefcase dev"
        },
        {
            "label": "Build",
            "type": "shell",
            "windows": {
                "command": "cd benevis && ..\\.venv\\Scripts\\briefcase build --update"
            },
            "command": "cd benevis && ../.venv/bin/briefcase build --update"
        },
        {
            "dependsOn": [
                "Build"
            ],
            "label": "Platform",
            "type": "shell",
            "osx": {
                "command": "[ -d 'benevis/macOS' ] && plutil -replace NSMicrophoneUsageDescription -string 'Allow?' benevis/macOS/app/Benevis/Benevis.app/Contents/Info.plist || echo 'PASS'"
            }
        },
        {
            "dependsOn": [
                "Platform"
            ],
            "label": "Run",
            "type": "shell",
            "windows": {
                "command": "cd benevis && ..\\.venv\\Scripts\\briefcase run"
            },
            "command": "cd benevis && ../.venv/bin/briefcase run"
        },
        {
            "dependsOn": [
                "Platform"
            ],
            "label": "Package",
            "type": "shell",
            "windows": {
                "command": "cd benevis && ..\\.venv\\Scripts\\briefcase package"
            },
            "command": "cd benevis && ../.venv/bin/briefcase package --no-sign"
        }
    ]
}